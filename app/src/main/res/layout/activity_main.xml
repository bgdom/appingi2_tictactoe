<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="vertical">
    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".HomeActivity">

        <ImageView android:layout_width="378dp"
                   android:layout_height="302dp"
                   android:id="@+id/img_ttt"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@drawable/img_tictactoe"/>

        <TextView   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tic Tac Toe"
                    android:textStyle="italic|bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:id="@+id/text_ttt_title"
                    app:layout_constraintTop_toBottomOf="@id/img_ttt"
                    />
        <TextView   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_made"
                    android:text="One app, one game. Made by Dominique Besson fr Android exam on Dec 17th, 2018"
                    app:layout_constraintTop_toBottomOf="@id/text_ttt_title"/>

        <TextView   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter your name:"
                    android:id="@+id/txt_enter_name"
                    app:layout_constraintTop_toBottomOf="@id/txt_made"/>

        <EditText   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_name"
                    app:layout_constraintTop_toBottomOf="@id/txt_enter_name"
                    />

        <Button     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:id="@+id/btn_start"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_name"/>

        <ImageView android:layout_width="83dp"
                   android:layout_height="83dp"
                   android:src="@drawable/img_epita"
                   android:id="@+id/img_epita"
                   app:layout_constraintTop_toBottomOf="@id/btn_start"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintRight_toRightOf="parent"/>

        <TextView   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Made at "
                    android:id="@+id/txt_made_at"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/img_epita"
                    app:layout_constraintTop_toBottomOf="@id/btn_start"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>